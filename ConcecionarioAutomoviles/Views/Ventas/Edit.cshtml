@model ConcecionarioAutomoviles.Models.Venta

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenta" />
            <div class="form-group">
                <label asp-for="IdAutomovil" class="control-label">ID Auto</label>
                <select asp-for="IdAutomovil" class="form-control" asp-items="ViewBag.IdAutomovil"></select>
                <span asp-validation-for="IdAutomovil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVendedor" class="control-label">Id del vendedor</label>
                <select asp-for="IdVendedor" class="form-control" asp-items="ViewBag.IdVendedor"></select>
                <span asp-validation-for="IdVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdServicioOficial" class="control-label">No Servicio</label>
                <select asp-for="IdServicioOficial" class="form-control" asp-items="ViewBag.IdServicioOficial"></select>
                <span asp-validation-for="IdServicioOficial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioVenta" class="control-label">Precio de venta</label>
                <input asp-for="PrecioVenta" class="form-control" />
                <span asp-validation-for="PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModoPago" class="control-label">Modo de pago</label>
                <input asp-for="ModoPago" class="form-control" />
                <span asp-validation-for="ModoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaEntrega" class="control-label">Fecha</label>
                <input asp-for="FechaEntrega" class="form-control" />
                <span asp-validation-for="FechaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label">Tipo de vehiculo</label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">Nuevo o usado</label>
                    <input class="form-check-input" asp-for="EsDeStock" /> 
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
