@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<main class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 100px);">
    <div class="login-container bg-white p-5 rounded shadow">
        <!-- Increased padding and set max-width -->
        <form id="loginForm" action="#" method="POST">
            <h2 class="text-center mb-4">Iniciar Sesión</h2>
            <div class="input-box mb-3">   
                <i class="fas fa-envelope"></i>
                <input type="email" class="form-control" placeholder="Correo electrónico" required>
            </div>
            <div class="input-box mb-3">
                <i class="fas fa-lock"></i>
                <input type="password" class="form-control" placeholder="Contraseña" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
            <div class="signup-text text-center mt-3">¿No tienes una cuenta? <a asp-area="" asp-controller="Home" asp-action="Registro">Regístrate</a></div>
        </form>
    </div>
</main>

<script>
    document.getElementById("loginForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Prevent form submission
        alert("Te has registrado exitosamente");
    });
</script>