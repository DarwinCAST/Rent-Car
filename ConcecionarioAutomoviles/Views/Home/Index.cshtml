@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
   
    <main>
        <section class="hero">
            <h1>Bienvenido</h1>
            <p>Explora nuestra amplia selección de vehículos nuevos y usados.</p>
           
        </section>
        <section class="featured-cars">
            <!-- Aquí podrías mostrar los automóviles destacados -->
        </section>
        <section class="services">
            <!-- Aquí podrías mostrar los servicios que ofrece el concesionario -->
        </section>
    </main>
     <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Estilos generales */
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
        }

        .container {
            width: 80%;
            margin: auto;
            overflow: hidden;
        }

        /* Estilos para el header */
        header {
            background: #333;
            color: #fff;
            padding: 1rem;
            text-align: center;
        }

        header h1 {
            font-size: 2.5rem;
        }

        /* Estilos para el hero section */
        .hero {
            background: url('hero.jpg') center/cover no-repeat;
            text-align: center;
            color: #fff;
            padding: 3rem 0;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        /* Estilos para los botones */
        .btn {
            display: inline-block;
            background: #333;
            color: #fff;
            padding: 0.8rem 2rem;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .btn:hover {
            background: #555;
        }
