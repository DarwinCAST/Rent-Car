@model IEnumerable<ConcecionarioAutomoviles.Models.Marca>

@{
    ViewData["Title"] = "Index";
}

<style>


    table td,
    table th {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    thead th {
        color: #fff;
    }

    .card {
        border-radius: .5rem;
    }

    .table-scroll {
        border-radius: .5rem;
    }

        .table-scroll table thead th {
            font-size: 1.25rem;
        }

    thead {
        top: 0;
        position: sticky;
    }

    h2, p {
        text-align: center;
    }

</style>


<h2>Marcas</h2>

<p>
    <a asp-action="Create">Crear Marca</a>
</p>
<section class="intro">
    <div class="bg-image h-100" style="background-color: #f5f7fa;">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                                    <table class="table table-striped mb-0">
                                        <thead style="background-color: #002d72;">
                                            <tr>
                                                <th scope="col">
                                                    IDMarca
                                                </th>
                                                <th scope="col">
                                                    Marca
                                                </th>
                                                <th scope="col">
                                                </th>
                                            </tr>
                                        </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMarca)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMarca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMarca">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdMarca">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMarca">Delete</a>
            </td>
               
        </tr>
}
    </tbody>
</table>
